#include <iostream>
using namespace std;
int main()
{
    int n, k, l, s, i;
    float b;
    cin>>n>>k>>l;
    s=0;
    int a[n];
    for (i=1; i<=n; i++)
    {
        cin>>a[i];
    }
    for (i=k; i<=n; i++)
    {
        if(i<=l)
        {
            s=s+a[i];
        }
    }
    b=s/(l-k+1);
    cout<<b;
    return 0;
}
